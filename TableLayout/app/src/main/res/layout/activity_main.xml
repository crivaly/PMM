<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/titulo" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="@string/color1"
        android:id="@+id/boton1"
        android:layout_alignTop="@+id/boton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0000" />

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="@string/color2"
        android:id="@+id/boton2"
        android:layout_alignTop="@+id/boton3"
        android:layout_toRightOf="@+id/boton1"
        android:layout_toEndOf="@+id/boton1"
        android:textColor="#1dc838" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/color3"
        android:id="@+id/boton3"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:textColor="#22bdf6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fondo"
        android:height="100dp"
        android:layout_below="@+id/boton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/borrar"
        android:id="@+id/borrar"
        android:layout_below="@+id/fondo"
        android:layout_alignRight="@+id/fondo"
        android:layout_alignEnd="@+id/fondo" />

</RelativeLayout>
